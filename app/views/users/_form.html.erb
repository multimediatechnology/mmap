<%= form_for(user) do |f| %>
    <% if user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <strong>Oh snap!</strong> <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
          <br>
          <ul>
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <label>Fachbereich</label>
      <%= f.select :major_id, Major.all.map { |major| [major.name, major.id] }, {}, {class: 'form-control'} %>
    </div>

    <div class="form-group">
      <label>Vorname</label>
      <%= f.text_field :first_name, {class: 'form-control'} %>
    </div>

    <div class="form-group">
      <label>Nachname</label>
      <%= f.text_field :last_name, {class: 'form-control'} %>
    </div>

    <div class="actions">
      <%= f.submit 'Speichern', {class: 'btn btn-primary'} %>
    </div>
<% end %>
