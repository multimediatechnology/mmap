<% if assets.length == 0 %>
    <p class="text-muted">Du hast noch nichts hochgeladen.</p>
<% else %>
    <table class="table table-striped table-sm">
      <thead>
      <tr>
        <th>Datei</th>
        <th>Typ</th>
        <% if can? :destroy, [user, assets] %>
            <th></th>
        <% end %>
      </tr>
      </thead>

      <tbody>
      <% assets.each do |asset| %>
          <tr>
            <td><%= link_to "#{asset.file_file_name}", asset.file.url %></td>
            <td><span class="text-muted text-uppercase"><%= asset.tag %></span></td>
            <% if can? :destroy, [user, asset] %>
                <td class="text-right">
                  <%= link_to 'Destroy', [user, asset], method: :delete, data: {confirm: 'Are you sure?'} %>
                </td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>
